<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Liste des Posts - Mon Blog</title>

    <link rel="preconnect" href="https://fonts.bunny.net" />
    <link
      href="https://fonts.bunny.net/css?family=instrument-sans:400,500,600,700"
      rel="stylesheet"
    />

    <style>
      :root {
        --sand-1: #fdfdfc;
        --sand-2: #f9f9f8;
        --sand-3: #f1f0ef;
        --sand-4: #e9e8e6;
        --sand-5: #e2e1de;
        --sand-6: #dad9d6;
        --sand-7: #cfceca;
        --sand-8: #bcbbb5;
        --sand-9: #8d8d86;
        --sand-10: #82827c;
        --sand-11: #63635e;
        --sand-12: #21201c;
      }
    </style>

    <script src="https://cdn.tailwindcss.com"></script>

    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              sans: ["Instrument Sans", "sans-serif"],
            },
            colors: {
              primary: {
                DEFAULT: "#5A45FF",
                lighter: "#a599ff",
              },
              sand: {
                1: "var(--sand-1)",
                2: "var(--sand-2)",
                3: "var(--sand-3)",
                4: "var(--sand-4)",
                5: "var(--sand-5)",
                6: "var(--sand-6)",
                7: "var(--sand-7)",
                8: "var(--sand-8)",
                9: "var(--sand-9)",
                10: "var(--sand-10)",
                11: "var(--sand-11)",
                12: "var(--sand-12)",
              },
            },
          },
        },
      };
    </script>

    @vite(['resources/css/app.css', 'resources/js/app.js'])
  </head>

  <body class="min-h-screen w-screen font-sans bg-sand-1">
    {{-- Barre de navigation --}}
    <nav class="bg-white/80 backdrop-blur-sm border-b border-sand-4 sticky top-0 z-50">
      <div class="max-w-screen-xl mx-auto px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="flex items-center space-x-2">
            <div class="w-8 h-8 bg-primary/20 rounded-lg flex justify-center items-center">
              <svg class="w-5 h-5 fill-primary" viewBox="0 0 24 24">
                <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z" />
              </svg>
            </div>
            <span class="font-semibold text-sand-12">Mon Blog</span>
          </a>

          {{-- Menu desktop --}}
          <div class="hidden md:flex items-center space-x-6">
            <a href="/" class="text-sand-11 hover:text-primary transition-colors font-medium">Accueil</a>
            <a href="/posts" class="text-primary font-medium">Articles</a>
            <a href="/blogs/add" class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary-lighter transition-colors font-medium">
              Nouveau Post
            </a>
          </div>

          {{-- Menu mobile --}}
          <button type="button" class="md:hidden text-sand-11 hover:text-primary" id="mobile-menu-button">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>

        <div class="md:hidden hidden" id="mobile-menu">
          <div class="py-4 space-y-2 border-t border-sand-4">
            <a href="/" class="block px-3 py-2 text-sand-11 hover:text-primary transition-colors">Accueil</a>
            <a href="/posts" class="block px-3 py-2 text-primary">Articles</a>
            <a href="/blogs/add" class="block px-3 py-2 text-sand-11 hover:text-primary transition-colors">Nouveau Post</a>
          </div>
        </div>
      </div>
    </nav>

    {{-- Header --}}
    <header class="py-12 bg-gradient-to-b from-sand-1 to-sand-2 text-center">
      <h1 class="text-4xl font-bold text-sand-12 mb-2">Tous les Articles</h1>
      <p class="text-lg text-sand-11">Découvrez nos dernières publications et idées</p>
    </header>

    {{-- Contenu principal --}}
    <main class="max-w-6xl mx-auto px-8 py-12">
      @if(posts.length > 0)
        <div class="mb-8 flex items-center justify-between">
          <div class="text-sand-11">
            <span class="font-semibold text-sand-12">{{ posts.length }}</span>
            article{{ posts.length > 1 ? 's' : '' }}
          </div>
          <a href="/blogs/add" class="inline-flex items-center gap-2 bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary-lighter transition-colors font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nouveau Post
          </a>
        </div>

        {{-- Grille des posts --}}
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          @each(post in posts)
            <article class="bg-white rounded-xl shadow-sm border border-sand-4 overflow-hidden hover:shadow-md transition-shadow group">
              @if(post.imageUrl)
                <img src="{{ post.imageUrl }}" alt="Image de {{ post.title }}" class="w-full h-48 object-cover" />
              @endif

              <div class="p-6 pb-4">
                <h2 class="text-xl font-semibold text-sand-12 group-hover:text-primary transition-colors line-clamp-2">
                  {{ post.title }}
                </h2>

                <div class="flex items-center gap-4 text-sm text-sand-10 mb-4 mt-2">
                  <span>{{ post.createdAt.toFormat('dd LLL yyyy') }}</span>
                  <span>•</span>
                  <span>{{ Math.ceil(post.content.length / 200) }} min de lecture</span>
                </div>

                {{-- Auteur du post --}}
                <div class="text-sm text-sand-10">
                  Posté par <strong>{{ post.user?.name || 'Invité' }}</strong>
                </div>
              </div>

              <div class="px-6 pb-6">
                <p class="text-sand-11 line-clamp-3 mb-4">
                  {{ post.content.substring(0, 150) }}{{ post.content.length > 150 ? '...' : '' }}
                </p>
                <a href="/blogs/{{ post.id }}" class="inline-flex items-center gap-2 text-primary hover:text-primary-lighter font-medium transition-colors">
                  Lire la suite
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>

              </div>
            </article>
          @end
        </div>
      @else
        <div class="text-center py-16">
          <h3 class="text-2xl font-semibold text-sand-12 mb-4">Aucun article pour le moment</h3>
          <p class="text-sand-11 mb-8">Soyez le premier à partager vos idées !</p>
          <a href="/blogs/add" class="inline-flex items-center gap-2 bg-primary text-white px-6 py-3 rounded-lg hover:bg-primary-lighter transition-colors font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Créer le premier article
          </a>
        </div>
      @endif
    </main>

    {{-- Pied de page --}}
    @include('partials/footer')

    {{-- Script menu mobile --}}
    <script>
      document.getElementById("mobile-menu-button").addEventListener("click", function () {
        document.getElementById("mobile-menu").classList.toggle("hidden");
      });
    </script>

    <style>
      .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
      .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
    </style>
  </body>
</html>
