<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kadea Task Manager - Connexion</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #eef2ff 0%, #dbeafe 100%);
        }
    </style>
</head>

<body class="flex items-center justify-center min-h-screen p-4">

    <!-- Conteneur principal -->
    <div class="w-full max-w-md text-center">

        <!-- Titre principal -->
        <h1 class="text-4xl font-extrabold text-gray-900 mb-2">Kadea Task Manager</h1>
        <p class="text-gray-600 mb-6">Connectez-vous à votre espace personnel</p>

        <!-- Carte de connexion -->
        <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-200 text-left">

            <h2 class="text-xl font-bold text-gray-900 mb-2">Connexion</h2>
            <p class="text-sm text-gray-600 mb-6">Entrez vos identifiants pour continuer</p>

            <!-- Flash message -->
            @if(flashMessages.get('success'))
              <div class="bg-green-100 text-green-800 p-3 mb-4 rounded-lg text-sm">
                {{ flashMessages.get('success') }}
              </div>
            @endif

            @if(flashMessages.get('error'))
              <div class="bg-red-100 text-red-800 p-3 mb-4 rounded-lg text-sm">
                {{ flashMessages.get('error') }}
              </div>
            @endif

            <!-- Formulaire -->
            <form method="POST" action="/login" class="space-y-6">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">

                <!-- Email -->
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                            <i class="fas fa-envelope w-5 h-5"></i>
                        </span>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            placeholder="votre@email.com" 
                            required 
                            class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:ring-indigo-600 focus:border-indigo-600 outline-none transition duration-150 ease-in-out"
                        />
                    </div>
                </div>

                <!-- Mot de passe -->
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Mot de passe</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                            <i class="fas fa-lock w-5 h-5"></i>
                        </span>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            placeholder="********" 
                            required 
                            class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:ring-indigo-600 focus:border-indigo-600 outline-none transition duration-150 ease-in-out"
                        />
                    </div>
                </div>

                <!-- Bouton de Connexion -->
                <button 
                    type="submit" 
                    class="w-full mt-8 bg-black text-white font-semibold py-3 rounded-lg hover:bg-gray-800 transition-colors shadow-lg shadow-black/20"
                >
                    Se connecter
                </button>

                <!-- Lien vers inscription -->
                <p class="text-center text-sm text-gray-600 mt-4">
                    Pas encore de compte ?
                    <a href="/register" class="text-indigo-600 hover:underline font-medium">
                        Créez-en un
                    </a>
                </p>
            </form>
        </div>
    </div>

</body>
</html>
